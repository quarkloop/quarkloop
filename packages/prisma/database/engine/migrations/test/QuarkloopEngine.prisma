generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["multiSchema"]
}

datasource db {
    provider  = "postgresql"
    url       = env("PG_QUARKLOOP_ENGINE_URL") // uses connection pooling
    directUrl = env("PG_QUARKLOOP_ENGINE_URL_NON_POOLING") // used for migrations
    schemas   = ["engine"]
}

model TableColumn {
    // id
    id      BigInt @id @default(autoincrement())
    tableId BigInt @unique

    // data
    columns Json

    // relation
    table Table @relation(fields: [tableId], references: [id])

    @@schema("engine")
}

model TableRecord {
    // id
    id      BigInt  @id @default(autoincrement())
    tableId BigInt?

    // data
    data Json

    // relation
    table Table? @relation(fields: [tableId], references: [id])

    @@schema("engine")
}

model Table {
    // id
    id BigInt @id @default(autoincrement())

    // data
    name        String
    description String

    // history
    createdAt DateTime  @default(now())
    createdBy String
    updatedAt DateTime?
    updatedBy String?

    // relation
    columns TableColumn?
    records TableRecord[]

    @@schema("engine")
}
